<div class="container font-family Work Sans">
  <h1>Create your new post</h1>
  <div class="container">
    <%= simple_form_for(@product) do |f| %>
      <%= f.input :name %>
      <%= f.input :year %>
      <%= f.input :brand %>
      <%= f.input :model %>
      <%= f.input :operator %>
      <%= f.input :status, collection: ["New", "Used"] %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, "Save",  class: "button-53" %>
    <% end %>

    <%= link_to "Back to products", products_path, class: "button-53" %>
  </div>
</div>
