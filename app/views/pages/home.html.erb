<head>
  <style>
    .jumbotron {
      background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.5) 75%), url('https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80');
      background-size: cover;
      height: 500px;
      color: white; /* Color de las letras */
      font-family: Arial, sans-serif; /* Estilo de la fuente */
    }
  </style>
</head>

<div class="container">
  <div class="col-12 my-3">

    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4">SellPhone</h1>
        <p class="lead">A new way to buy and sell</p>
        <%= link_to("Shop NOW", products_path, class: "btn btn-primary btn-lg") %>
      </div>
    </div>

    <main class="my-5">
      <section class="featured-products">
        <div class="text-center mb-5">
          <h2>Featured products</h2>
        </div>

        <div class="row">

          <% @products[0, [@products.size, 3].min].each do |product|  %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm transition: transform 0.2s">
                <%= link_to product_path(product.id), style: "text-decoration:none; color:inherit;" do %>
                  <% if product.photos.size == 0 %>
                    <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" class="card-img-top" alt="...">
                  <% else %>
                    <div class="card-img-top"><%= cl_image_tag product.photos.first.key, class: "card-img-top", height: 300, width: 300, crop: :fill %></div>
                  <% end %>
                  <div class="card-img-overlay"></div>
                  <div class="card-body">
                    <h3 class="card-title"><%= product.name %></h3>
                    <p class="card-text">$<%= product.price %></p>
                  </div>
                  <div class="card-footer"></div>
                <% end %>
              </div>
            </div>
          <% end %>

        </div>
      </section>
    </main>



  </div>

  </div>
</div>
